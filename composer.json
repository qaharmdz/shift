{
    "name": "mdz/shift",
    "type": "project",
    "description": "Shift - Pragmatic PHP CMS",
    "keywords": [
        "php-cms"
    ],
    "homepage": "https://github.com/qaharmdz/shift",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Mudzakkir",
            "email": "hello@mdzstack.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "twig/twig": "^3.7",
        "adbario/php-dot-notation": "^3.3",
        "phpfastcache/phpfastcache": "^9.1",
        "phpmailer/phpmailer": "^6.8",
        "webmozart/assert": "^1.11",
        "claviska/simpleimage": "^4.0"
    },
    "require-dev": {
        "kint-php/kint": "^5.0"
    },
    "autoload": {
        "classmap": [
            "shift/",
            "tests/"
        ],
        "files": [
            "shift/system/helper/autoloaded.php"
        ]
    },
    "config": {
        "vendor-dir": "shift/vendor/",
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "scripts": {
        "vendor-check": [
            "composer show --latest",
            "composer show --tree"
        ],
        "post-autoload-dump": [
            "Shift\\System\\Autoloader\\Psr4Lowercase::classMap"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
