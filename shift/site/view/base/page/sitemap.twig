{% extends 'main.tpl.twig' %}

{% block content %}
<h1>{{ shift.lib.language.get('page_title') }}</h1>

{% if content %}
<p>{{ content }}</p>
{% endif %}

<div class="uk-child-width-1-2@m" uk-grid>
{% for section in sections %}
    <div>
        <ul class="uk-list">
        {% for links in section %}
            {% if links.1 is iterable %}
                <li>{{ links.0 }}
                    <ul class="uk-list uk-margin-left">
                    {% for link in links.1 %}
                        <li><a href="{{ link.1 }}">{{ link.0 }}</a></li>
                    {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li><a href="{{ links.1 }}">{{ links.0 }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </div>
{% endfor %}
</div>
{% endblock %}
