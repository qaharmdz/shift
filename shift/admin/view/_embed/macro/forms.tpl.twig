{% macro select(param) %}
    {% set param = {
        'id'         : '',
        'label'      : '',
        'name'       : '',
        'options'    : [],
        'opt_text'   : 'text',
        'opt_value'  : 'value',
        'selected'   : '',
        'class'      : 'uk-width-250@m',
        'class_form' : '',
        'attribute'  : '',
        'info'       : '',
        'required'   : false,
        'multiple'   : false,
        'errors'     : [],
    }|merge(param) %}

    {% if param.options is iterable %}
    <div class="uk-margin {{ param.class_form }} {{ param.errors[param.name] is defined ? 'uk-form-danger' }}">
        {% if param.label %}
            <label class="uk-form-label" for="{{ param.id ?: param.label }}">{{ param.required ? '<span class="uk-text-danger">*</span>' }} {{ app.language.get(param.label) }}</label>
        {% endif %}
        <div class="{{ param.label ? 'uk-form-controls' }}">
            <select id="{{ param.id ?: param.label }}" name="{{ param.name }}" class="uk-select {{ param.class }}" {{ param.multiple ? 'multiple="multiple"' }} {{ param.attribute }}>
                {% for option in param.options %}
                    {% set isSelected = false %}
                    {% if param.multiple %}
                        {% set isSelected = option[param.opt_value] in param.selected %}
                    {% else %}
                        {% set isSelected = option[param.opt_value] == param.selected %}
                    {% endif %}
                    <option value="{{ option[param.opt_value] }}" {{ isSelected ? 'selected' }}>{{ option[param.opt_text] }}</option>
                {% endfor %}
            </select>
            {% if param.info %}
                <div class="uk-text-meta">{{ param.info }}</div>
            {% endif %}
            {% if param.errors[param.name] is defined %}
                <div class="uk-text-meta uk-text-danger">{{ param.errors[param.name] }}</div>
            {% endif %}
        </div>
    </div>
    {% endif %}
{% endmacro %}

{% macro radioButton(param) %}
    {% set param = {
        'mode'       : 'enable-disable',
        'id'         : '',
        'label'      : '',
        'name'       : '',
        'options'    : [],
        'opt_text'   : 'text',
        'opt_value'  : 'value',
        'opt_state'  : 'state',
        'checked'    : '',
        'class_form' : '',
        'info'       : '',
        'required'   : false,
        'errors'     : [],
    }|merge(param) %}

    {% if param.options is empty %}
        {% if param.mode == 'yes-no' %}
            {% set param = param|merge({
                'options': [
                    {'text':app.language.get('yes'), 'value':'1', 'state':'success'},
                    {'text':app.language.get('no'), 'value':'0', 'state':'danger'},
                ]
            }) %}
        {% else %}
            {% set param = param|merge({
                'options': [
                    {'text':app.language.get('enabled'), 'value':'1', 'state':'success'},
                    {'text':app.language.get('disabled'), 'value':'0', 'state':'danger'},
                ]
                }) %}
        {% endif %}
    {% endif %}

    <div class="uk-margin {{ param.class_form }} {{ param.errors[param.name] is defined ? 'uk-form-danger' }}">
        {% if param.label %}
            <label class="uk-form-label" for="{{ param.id ?: param.label }}">{{ param.required ? '<span class="uk-text-danger">*</span>' }} {{ app.language.get(param.label) }}</label>
        {% endif %}
        <div class="{{ param.label ? 'uk-form-controls' }}">
            <div class="uk-button-group uk-button-radio">
                {% for option in param.options %}
                    <input type="radio" id="{{ (param.id ?: param.label) ~ '-' ~ loop.index }}" name="{{ param.name }}" value="{{ option[param.opt_value] }}" {{ option[param.opt_value] == param.checked ? 'checked' }} hidden>
                    <label for="{{ (param.id ?: param.label) ~ '-' ~ loop.index }}" class="uk-button uk-button-default uk-button-active-{{ option[param.opt_state] }}">{{ option[param.opt_text] }}</label>
                {% endfor %}
            </div>
            {% if param.info %}
                <div class="uk-text-meta">{{ param.info }}</div>
            {% endif %}
            {% if param.errors[param.name] is defined %}
                <div class="uk-text-meta uk-text-danger">{{ param.errors[param.name] }}</div>
            {% endif %}
        </div>
    </div>
{% endmacro %}

{% macro checkboxPanel(param) %}
    {% set param = {
        'id'         : '',
        'label'      : '',
        'name'       : '',
        'lists'      : [],
        'list_text'  : 'text',
        'list_value' : 'value',
        'checked'    : [],
        'class_form' : '',
        'info'       : '',
        'required'   : false,
        'errors'     : [],
        'htmlEnd'    : '',
    }|merge(param) %}

    <div class="uk-margin {{ param.class_form }} {{ param.errors[param.name] is defined ? 'uk-form-danger' }}">
        {% if param.label %}
            <label class="uk-form-label" for="{{ param.id ?: param.label }}">
                {{ param.required ? '<span class="uk-text-danger">*</span>' }} {{ app.language.get(param.label) }}
            </label>
        {% endif %}
        <div class="{{ param.label ? 'uk-form-controls' }}">
            <div class="uk-panel uk-panel-scrollable">
                <ul class="uk-list uk-list-striped uk-list-collapse">
                    {% for list in param.lists %}
                        <li>
                            <label class="uk-input-text" style="display:block;">
                                <input class="uk-checkbox checkbox-toggle-{{ param.label }}" type="checkbox" name="{{ param.name}}" value="{{ list[param.list_value] }}" {{ list[param.list_value] in param.checked ? 'checked' }}> {{ list[param.list_text] }}
                            </label>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% if param.info %}
                <div class="uk-text-meta">{{ param.info }}</div>
            {% endif %}
            {% if param.errors[param.name] is defined %}
                <div class="uk-text-meta uk-text-danger">{{ param.errors[param.name] }}</div>
            {% endif %}
            {{ param.htmlEnd|raw }}
        </div>
    </div>
{% endmacro %}

{% macro infoDate(param) %}
    {% set param = {
        'label'      : '',
        'datetime'   : '',
        'class_form' : '',
    }|merge(param) %}

    <div class="uk-margin {{ param.class_form }}">
        {% if param.label %}
            <label class="uk-form-label">{{ app.language.get(param.label) }}</label>
        {% endif %}
        <div class="{{ param.label ? 'uk-form-controls uk-form-controls-text' }}" data-format-date="{{ param.datetime }}">{{ param.datetime }}</div>
    </div>
{% endmacro %}
