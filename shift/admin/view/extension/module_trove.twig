<div class="content-body">
    <div class="uk-grid-column-small uk-grid-small {{ modules|length > 2 ? 'uk-child-width-1-3@s' : 'uk-child-width-1-2@s' }}" uk-grid="masonry:true">
        {% for module in modules %}
            <div>
                <a href="{{ module.url_add }}">
                    <div class="card-trove">
                        <div class="uk-card-badge uk-label">{{ shift.lib.language.get('add_new') }}</div>
                        <h4>{{ module.name }} v{{ module.version }}</h4>
                        {% if module.description %}
                        <p>{{ module.description }}</p>
                        {% endif %}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
