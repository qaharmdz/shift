{% if files %}
    <div class="uk-grid-small uk-grid-match uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m uk-child-width-1-5@l" uk-grid>
        {% for file in files %}
        <div>
            <div class="uk-card uk-card-default card-thumbnail" title="{{ file.filename }} - {{ file.filesize }}">
                <div class="card-media uk-card-media-top uk-cover-container">
                    {# <div class="uk-card-badge uk-label uk-background-gray-deep">{{ file.extension }}</div> #}
                    <img src="{{ file.thumbnail }}" uk-cover>
                    <div class="button-wrapper">
                        {% if inModal %}
                            <button class="uk-button uk-button-primary button-action" uk-tooltip title="{{ shift.lib.language.get('select_image') }}" data-mm-select='{{ file|json_encode() }}'>
                                <i class="bi bi-check2-square"></i>
                            </button>
                        {% endif %}
                        {% if not inModal %}
                            <button class="uk-button uk-button-gray button-action" uk-tooltip title="{{ shift.lib.language.get('rename') }}" data-mm-action='{"action":"rename", "folder":"{{ file.folder }}", "basename":"{{ file.basename }}", "ext":"{{ file.extension }}"}'>
                                <i class="bi bi-pencil uk-text-primary"></i>
                            </button>
                            <button class="uk-button uk-button-gray button-action" uk-tooltip title="{{ shift.lib.language.get('delete') }}" data-mm-action='{"action":"delete", "folder":"{{ file.folder }}", "filename":"{{ file.filename }}"}'>
                                <i class="bi bi-trash uk-text-danger"></i>
                            </button>
                        {% endif %}
                    </div>
                </div>
                <div class="uk-card-body">
                    <p class="uk-text-truncate">
                        {{ file.filename }}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% else %}
    <p class="uk-text-small">{{ shift.lib.language.get('empty_folder') }}</p>
{% endif %}
