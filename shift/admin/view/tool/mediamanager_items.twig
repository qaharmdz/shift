{% if files %}

    <div class="uk-grid-small uk-grid-match uk-child-width-1-3 uk-child-width-1-4@s uk-child-width-1-5@m uk-child-width-1-6@l" uk-grid>
        {% for file in files %}
        <div>
            <div class="uk-card item-thumbnail">
                <div class="card-media uk-card-media-top uk-cover-container">
                    {# <div class="uk-card-badge uk-label uk-background-gray-deep">{{ file.extension }}</div> #}
                    <img src="{{ file.thumbnail }}" uk-cover>
                </div>
                <div class="uk-card-body">
                    <p class="uk-text-small ukt-mt-1">
                        {{ file.filename }}
                        {# <br>{{ file.filesize }} #}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% else %}
    <p class="uk-text-small">{{ app.language.get('empty_folder') }}</p>
{% endif %}
